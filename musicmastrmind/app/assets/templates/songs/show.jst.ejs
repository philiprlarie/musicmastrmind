<div class="song-primary">
  <h2 class="song-title"><%= song.escape('title') %></h2>
  <!-- TODO "lyrics by" shows up before anything else -->
  <h4>lyrics by <%= creator.escape('username') %></h4>

  <!-- TODO maybe make this a table view that is sortable. see ned's videos -->
  <ul class="lines">
    <% song.lines().each(function (line) { %>
      <li>
        <div class="song-lyric" data-line-id="<%= line.escape('id') %>"><%= line.escape('body') %></div>
      </li>
    <% }); %>
  </ul>
</div>

<div class="line-show"></div>
