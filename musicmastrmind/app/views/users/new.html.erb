<h1>Sign Up</h1>
<!-- TODO style better. sign in page too -->
<!-- TODO show errors on bad sign in. sign in page too -->

<% if flash[:errors] %>
  <ul class="errors">
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<form method="post" action="<%= users_url %>">
  <%= form_token %>

  <label for="Username">Username: </label>
  <input type="text"
    id="Username"
    name="user[username]"
    value="<%= @user.username %>">

  <label for="email">Email: </label>
  <input type="text"
    id="email"
    name="user[email]"
    value="<%= @user.email %>">

  <label for="Password">Password: </label>
  <input type="password"
    id="Password"
    name="user[password]">

  <input type="submit" value="Sign Up">
</form>

<br>
<a href="/" class="btn btn-default">Back to Site</a>
<a href="<%= new_session_url %>" class="btn btn-default">Sign In</a>
