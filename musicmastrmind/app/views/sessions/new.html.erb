<h1>Sign In</h1>

<!-- TODO add links to root page w/o signing in. Style better -->
<form method="post" action="<%= session_url %>">
<%= form_token %>

  <label for="username_email">Enter your Username or Email: </label>
  <input type="text"
    id="username_email"
    name="user[username_email]"
    value="<%= @username_email %>">

  <label for="Password">Password: </label>
  <input type="password"
    id="Password"
    name="user[password]">

  <input type="submit" value="Sign In">
</form>

<br>
<a href="/" class="btn btn-default">Back to Site</a>
